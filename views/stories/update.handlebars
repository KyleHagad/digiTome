<h1>Update record.</h1>

<div class="row">
  <!-- 'Create' form -->
  <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <!-- Title of record -->
      <div class="input-field">
        <input type="text" name="title" id="title" value="{{story.title}}">
        <label for="title"></label>
      </div>
    </div>

    <div class="row">
      <!-- Viewability selector -->
      <div class="input-field">
        <select name="status" id="status">
          {{#select story.status}}
            <option value="draft">Unpublished Draft</option>
            <option value="private">Private Record</option>
            <option value="public">Public Record</option>
          {{/select}}
        </select>
        <label for="status">Publishing Status</label>
      </div>
    </div>

    <div class="row">
      <!-- Commentability selector -->
      <p>
        <label>
          <input type="checkbox" class="filled-in" {{#if story.allowComments}}checked="checked"{{/if}} name="allowComments" id="allowComments" />
          <span>Select to Allow Commentary</span>
        </label for="allowComments">
      </p>
    </div>

    <div class="row">
      <div class="input-field">
        {{> _textEditor}}
      </div>
    </div>

    <input type="submit" value="save" class="btn">

  </form>
</div>
