<h1>Records Index</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <a href="/stories/update/{{id}}" class="btn-floating halfway-fab red"><i class="fas fa-pen"></i></a>
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="story-text">{{stripTags (truncate body 72)}}</p>
          
          <br>

          <div class="chip">
            <img src="{{user.image}}">
            {{user.firstName}} {{user.lastName}}
          </div>
        
        </div>
        <div class="card-action center-align">
          <a class="btn grey darken-1" href="/stories/read/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No record</p>
  {{/each}}
</div>
